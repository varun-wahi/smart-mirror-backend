  "description": "",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.8",
    "body-parser": "^1.20.3",
    "canvas": "^3.1.0",
    "child_process": "^1.0.2",
    "cloudinary": "^2.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "face-api.js": "^0.20.0",
    "fs": "^0.0.1-security",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.1",
    "node-fetch": "^3.3.2",
    "pdfkit": "^0.17.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.7"
  }
